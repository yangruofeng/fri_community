<?php

class clientControl {
  public function __construct(){
    Language::read('act,label,tip');
    Tpl::setLayout('empty_layout');
    Tpl::setDir('client');
  }

  public function indexOp(){
    if(!cookie('member_id')){
      @header("Location: ".getUrl('login', 'index', array(), false, WAP_OPERATOR_SITE_URL)."");
    }
    $data = array();
    $data['officer_id'] = cookie('member_id');
    $data['token'] = cookie('token');
    $url = ENTRY_API_SITE_URL.'/officer.followed.member.php';
    $rt = curl_post($url, $data);
    $rt = json_decode($rt, true);
    Tpl::output('list', $rt['DATA']);
    Tpl::output('html_title', 'Operator');
    Tpl::output('header_title', 'Operator');
    Tpl::output('nav_footer', 'client');
    Tpl::showPage('index');
  }
}
